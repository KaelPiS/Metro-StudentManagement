<Metro:MetroWindow x:Class="StudentManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManagement"
        xmlns:Metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:View="clr-namespace:StudentManagement.View"
        mc:Ignorable="d"
        xmlns:Viewmodle="clr-namespace:StudentManagement.ViewModel"
        Title="" Height="350" Width="525"
        ResizeMode="CanResizeWithGrip" 
        GlowBrush="{DynamicResource AccentColorBrush}"     
        NonActiveBorderBrush="Black"  
        WindowState="Maximized"
        Icon="/StudentManagement;component/Resources/Icons/App_icon.png"
         Name="MetroWindow"       >
    <Metro:MetroWindow.DataContext>
        <Viewmodle:DialogVIewModle></Viewmodle:DialogVIewModle>
    </Metro:MetroWindow.DataContext>
    <Metro:MetroWindow.Background>
        <ImageBrush/>
    </Metro:MetroWindow.Background>
    <Metro:MetroWindow.RightWindowCommands>
        <Metro:WindowCommands>
            <Button Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=MetroWindow}">Login</Button>
        </Metro:WindowCommands>
    </Metro:MetroWindow.RightWindowCommands>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/Backgrounds/Background.png"/>
        </Grid.Background>
      
    </Grid>
</Metro:MetroWindow>
