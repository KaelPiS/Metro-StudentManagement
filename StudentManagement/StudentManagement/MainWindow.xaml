<Metro:MetroWindow x:Class="StudentManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManagement"
        xmlns:Metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:View="clr-namespace:StudentManagement.View"
        mc:Ignorable="d"
        Title="" Height="350" Width="525"
        ResizeMode="CanResizeWithGrip" 
        GlowBrush="{DynamicResource AccentColorBrush}"     
        NonActiveBorderBrush="Black"  
        WindowState="Maximized"
        Icon="/StudentManagement;component/Resources/Icons/App_icon.png"
                  >
    <Metro:MetroWindow.Background>
        <ImageBrush/>
    </Metro:MetroWindow.Background>



    <Metro:MetroWindow.RightWindowCommands>
        <Metro:WindowCommands>
            <Button>Login</Button>
        </Metro:WindowCommands>
    </Metro:MetroWindow.RightWindowCommands>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/Backgrounds/Background.png"/>
        </Grid.Background>

    </Grid>
</Metro:MetroWindow>
