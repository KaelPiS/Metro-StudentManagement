<Metro:MetroWindow x:Class="StudentManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManagement"
        xmlns:Metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:View="clr-namespace:StudentManagement.View"
        mc:Ignorable="d"
        Title="" Height="350" Width="525"
        ResizeMode="CanResizeWithGrip" 
        GlowBrush="{DynamicResource AccentColorBrush}"     
        NonActiveBorderBrush="Black"  
        WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!--Tab-->

        <Metro:MetroAnimatedSingleRowTabControl 
            Metro:TabControlHelper.IsUnderlined="True"
            >
            <TabItem Header="Mark " 
                     Metro:ControlsHelper.HeaderFontWeight="Bold"
                     Metro:ControlsHelper.HeaderFontSize="35"
                     FontFamily="Calibri">
                <Metro:MetroAnimatedTabControl>
                    <TabItem Metro:ControlsHelper.HeaderFontSize="25" 
                             Header="Academic"
                             FontFamily="Verdana">
                        <View:AcademicView></View:AcademicView>


                    </TabItem>

                    <TabItem Header="Curriculum"
                             Metro:ControlsHelper.HeaderFontSize="25" 
                             FontFamily="Verdana">
                      
                    </TabItem>
                    <TabItem Header="Diploma Project"
                             Metro:ControlsHelper.HeaderFontSize="25"                          
                             FontFamily="Verdana">
                    </TabItem>
                </Metro:MetroAnimatedTabControl>

            </TabItem>



        </Metro:MetroAnimatedSingleRowTabControl>

        <StatusBar Grid.Row="1" VerticalAlignment="Bottom">
            <StatusBarItem>Info</StatusBarItem>
            <Separator Style="{StaticResource MetroStatusBarSeparator}"></Separator>
            <StatusBarItem>501 C1</StatusBarItem>
        </StatusBar>
    </Grid>
</Metro:MetroWindow>
