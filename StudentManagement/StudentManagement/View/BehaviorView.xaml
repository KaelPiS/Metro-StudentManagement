<UserControl x:Class="StudentManagement.View.BehaviorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentManagement.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:Viewmodel="clr-namespace:StudentManagement.ViewModel"
             xmlns:Metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">
    <UserControl.Resources>
        <Viewmodel:BehaviorViewModel x:Key="key1"></Viewmodel:BehaviorViewModel>
    </UserControl.Resources>
    <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
    <Grid>
        <Grid Margin="5">
            <Grid.Background>
                <ImageBrush 
                ImageSource="/Resources/Backgrounds/MainBackground.png">
                </ImageBrush>

            </Grid.Background>
        </Grid>
        
            <Grid>
      
            <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <ComboBox Margin="20"
                          BorderBrush="Green"
                          BorderThickness="2"
                          Metro:TextBoxHelper.Watermark="Choose Module">
                <ComboBoxItem Content="Module 1">

                </ComboBoxItem>
                <ComboBoxItem Content="Module 2">

                </ComboBoxItem>
            </ComboBox>

            <ComboBox Margin="20"
                          BorderBrush="Green"
                          BorderThickness="2"
                          Metro:TextBoxHelper.Watermark="Choose Year">
                <ComboBoxItem Content="Year 1">

                </ComboBoxItem>
                <ComboBoxItem Content="Year 2">

                </ComboBoxItem>
                <ComboBoxItem Content="Year 3">

                </ComboBoxItem>

                <ComboBoxItem Content="Year 4">

                </ComboBoxItem>
            </ComboBox>

        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>

            </Grid.ColumnDefinitions>
            <Expander DataContext="{StaticResource key1}" Header="Activity Group " Grid.Column="0" IsExpanded="True">
                <ListBox Name="LsvGroup"  ItemsSource="{Binding ActiveGroup }" DisplayMemberPath="GroupName" >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding ActivitiesCommand }" CommandParameter="{Binding ElementName=LsvGroup}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListBox>
            </Expander>
            <Expander DataContext="{StaticResource key1}" Header="Activities" Grid.Column="1" IsExpanded="True">
                <ListBox SelectedIndex="0"  DisplayMemberPath="ActivityName" Name="LsvActivities"  ItemsSource="{Binding Activities  }" >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding DetailCommand }" CommandParameter="{Binding ElementName=LsvActivities}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListBox>
            </Expander>
                    <Expander DataContext="{StaticResource key1}" Header="Activity Detail " Grid.Column="2" IsExpanded="True">
                        <ListBox ItemsSource="{Binding DetailActivity}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding ActivityName}" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" TextAlignment="Center" FontFamily="Consolas" FontWeight="Bold" ></TextBlock>
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <TextBlock FontSize="15" Text="Organization   :  " FontFamily="consolas" Padding="10,30,1,0"></TextBlock>
                                            <TextBlock FontSize="15" Text="{Binding Organization}" FontFamily="consolas" Padding="10,30,1,0"></TextBlock>
                                        </StackPanel>
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock HorizontalAlignment="Right" FontSize="15" Text="Max Participation   |" FontFamily="consolas" Padding="10,10,1,0"></TextBlock>
                                                <TextBlock HorizontalAlignment="Center" FontSize="15" Text="{Binding MaxParticipation}" FontFamily="consolas" Padding="10,10,1,0"></TextBlock>
                                            </StackPanel>
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock HorizontalAlignment="Left" FontSize="15" Text="  Registered Participation" FontFamily="consolas" Padding="10,10,1,0"></TextBlock>
                                                <TextBlock HorizontalAlignment="Center" FontSize="15" Text="{Binding RegisteredParticipation}" FontFamily="consolas" Padding="10,10,1,0"></TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock HorizontalAlignment="Right" FontSize="15" Text=" Start Day   |" FontFamily="consolas" Padding="10,10,1,0"></TextBlock>
                                                <TextBlock HorizontalAlignment="Center" FontSize="15" Text="{Binding StartDay}" FontFamily="consolas" Padding="10,10,1,0"></TextBlock>
                                            </StackPanel>
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock HorizontalAlignment="Left" FontSize="15" Text="  FinishDay              " FontFamily="consolas" Padding="10,10,1,0"></TextBlock>
                                                <TextBlock HorizontalAlignment="Center" FontSize="15" Text="{Binding FinishDay}" FontFamily="consolas" Padding="10,10,1,0"></TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                    </Expander>
                </Grid >
        <StackPanel  Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
            <Label  Content="Summary"></Label>
            <Label Name="lblSum" Content="This Sum"></Label>
        </StackPanel>
            </Grid>
        
    </Grid>
        </ScrollViewer>
</UserControl>
