<UserControl x:Class="StudentManagement.View.AccountSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentManagement.View"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="0">
            <TextBlock HorizontalAlignment="Center" Text="ACCOUNT"></TextBlock>
            <TextBlock HorizontalAlignment="Center" Text="User Infomation"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <Image Width="125" Height="125" HorizontalAlignment="Left">

                </Image>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Name here"></TextBlock>
                    <TextBlock Text="Email here"></TextBlock>
                </StackPanel>

            </StackPanel>
            <TextBlock>
            <Hyperlink>
                <TextBlock Text="Change Profile Picture" HorizontalAlignment="Center"></TextBlock>
            </Hyperlink>
        </TextBlock>
            <TextBlock>
            <Hyperlink>
                <TextBlock Text="Change Passwork" HorizontalAlignment="Center"></TextBlock>
            </Hyperlink>
        </TextBlock>
            <TextBlock>
            <Hyperlink>
                <TextBlock Text="Sign Out" HorizontalAlignment="Center"></TextBlock>
            </Hyperlink>
        </TextBlock>
        </StackPanel>


        <StackPanel Grid.Column="1" Visibility="Hidden" Name="stpChangeImage"  Orientation="Vertical">
            <TextBlock Text="TASKS" HorizontalAlignment="Center"></TextBlock>
            <TextBlock Text="Task name" HorizontalAlignment="Center"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBox Width="200" FontSize="8" Name="txtPicturePath" Text="Picture Path here"></TextBox>
                <Button FontSize="8" Width="40" Content="Browse" Margin="13,0,0,0"/>
            </StackPanel>

            <Image Margin="0,5,0,0" Width="150" Height="150" >

            </Image>

            <Button Width="50" Height="20" HorizontalAlignment="Center" Content="OK"></Button>

        </StackPanel>


        <StackPanel Grid.Column="1" Name="stpChangePass" Visibility="Visible" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="85" Text="Passwork: "></TextBlock>
                <TextBox Width="165"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Width="85" Text="New Passwork: "></TextBlock>
                <TextBox Width="165"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Width="85" Text="Retype: "></TextBlock>
                <TextBox Width="165"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                <Button Margin="5" Content="OK" Width="50"></Button>
                <Button Margin="5"  Content="Reset" Width="50"></Button>
            </StackPanel>
        </StackPanel>


    </Grid>
</UserControl>
